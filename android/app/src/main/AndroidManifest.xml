<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
  <!-- الـ permissions الأساسية -->
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
  <uses-permission android:name="android.permission.VIBRATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WAKE_LOCK" />
    
  
  <!-- TV Support Features مع الحفاظ على Mobile Support -->
  <!-- تصريح أن التطبيق يدعم Android TV (اختياري) -->
  <uses-feature 
    android:name="android.software.leanback" 
    android:required="false" />

    <uses-feature 
    android:name="android.hardware.type.television" 
    android:required="false" />
  
  <!-- تصريح أن التطبيق يدعم touchscreen (للموبايل والتابلت) -->
  <uses-feature 
    android:name="android.hardware.touchscreen" 
    android:required="false" />
  
  <!-- دعم اختياري للـ gamepad -->
  <uses-feature 
    android:name="android.hardware.gamepad" 
    android:required="false" />

  <queries>
    <intent>
      <action android:name="android.intent.action.VIEW"/>
      <category android:name="android.intent.category.BROWSABLE"/>
      <data android:scheme="https"/>
    </intent>
  </queries>
  
  <application 
    android:name=".MainApplication" 
    android:label="@string/app_name" 
    android:icon="@mipmap/ic_launcher" 
    android:roundIcon="@mipmap/ic_launcher_round" 
    android:banner="@drawable/tv_banner"
    android:allowBackup="true" 
    android:theme="@style/AppTheme" 
    android:supportsRtl="true"
    android:usesCleartextTraffic="true"
    android:networkSecurityConfig="@xml/network_security_config"
    android:requestLegacyExternalStorage="true"
    android:largeHeap="true">
    
    <meta-data android:name="expo.modules.updates.ENABLED" android:value="false"/>
    <meta-data android:name="expo.modules.updates.EXPO_UPDATES_CHECK_ON_LAUNCH" android:value="ALWAYS"/>
    <meta-data android:name="expo.modules.updates.EXPO_UPDATES_LAUNCH_WAIT_MS" android:value="0"/>
    
    <activity 
      android:name=".MainActivity" 
      android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|uiMode" 
      android:launchMode="singleTask" 
      android:windowSoftInputMode="adjustResize" 
      android:theme="@style/Theme.App.SplashScreen" 
      android:exported="true" 
      android:screenOrientation="landscape">
      
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <!-- Launcher للموبايل والتابلت -->
        <category android:name="android.intent.category.LAUNCHER"/>
        <!-- Launcher للتلفزيونات -->
        <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
      </intent-filter>
    </activity>

   

  </application>
</manifest>